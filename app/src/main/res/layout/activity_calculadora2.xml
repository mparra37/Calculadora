<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Calculadora2">
    <TextView
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:id="@+id/texto2"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            android:textSize="24sp" android:gravity="right" android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@+id/textView4"/>
    <TextView
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:id="@+id/texto1" android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/texto2" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" android:textSize="24sp" android:gravity="right" android:hint="0"/>
    <Button
            android:text="7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/boton7" android:layout_marginTop="32dp"
            app:layout_constraintTop_toBottomOf="@+id/texto1"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintEnd_toStartOf="@+id/boton8" android:onClick="siete"/>
    <Button
            android:text="8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/boton8"
            app:layout_constraintStart_toEndOf="@+id/boton7"
            app:layout_constraintBaseline_toBaselineOf="@+id/boton7"
            app:layout_constraintHorizontal_bias="0.5" app:layout_constraintEnd_toStartOf="@+id/boton9"
            android:onClick="ocho"/>
    <Button
            android:text="9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/boton9" app:layout_constraintStart_toEndOf="@+id/boton8"
            app:layout_constraintBaseline_toBaselineOf="@+id/boton8"
            app:layout_constraintHorizontal_bias="0.5" app:layout_constraintEnd_toStartOf="@+id/botonSuma"
            android:onClick="nueve"/>
    <Button
            android:text="+"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/botonSuma" app:layout_constraintStart_toEndOf="@+id/boton9"
            app:layout_constraintBaseline_toBaselineOf="@+id/boton9"
            app:layout_constraintHorizontal_bias="0.5" app:layout_constraintEnd_toEndOf="parent"
            android:textSize="14sp" android:onClick="sumar"/>
    <TextView
            android:text="Calculadora"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView4" android:textSize="30sp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="16dp" android:layout_marginTop="16dp" app:layout_constraintTop_toTopOf="parent"/>
    <Button
            android:text="4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/boton4" android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/boton7" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.5" app:layout_constraintEnd_toStartOf="@+id/boton5"
            android:onClick="cuatro"/>
    <Button
            android:text="5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/boton5"
            app:layout_constraintStart_toEndOf="@+id/boton4" app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintEnd_toStartOf="@+id/boton6" app:layout_constraintBaseline_toBaselineOf="@+id/boton4"
            android:onClick="cinco"/>
    <Button
            android:text="6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/boton6"
            app:layout_constraintStart_toEndOf="@+id/boton5" app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintEnd_toStartOf="@+id/botonResta"
            app:layout_constraintBaseline_toBaselineOf="@+id/boton5" android:onClick="seis"/>
    <Button
            android:text="-"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/botonResta" app:layout_constraintStart_toEndOf="@+id/boton6"
            app:layout_constraintHorizontal_bias="0.5" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBaseline_toBaselineOf="@+id/boton6" android:onClick="restar"/>
    <Button
            android:text="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/boton1" android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/boton4" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.5" app:layout_constraintEnd_toStartOf="@+id/boton2"
            android:onClick="uno"/>
    <Button
            android:text="2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/boton2"
            app:layout_constraintStart_toEndOf="@+id/boton1" app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintEnd_toStartOf="@+id/boton3" app:layout_constraintBaseline_toBaselineOf="@+id/boton1"
            android:onClick="dos"/>
    <Button
            android:text="3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/boton3"
            app:layout_constraintStart_toEndOf="@+id/boton2" app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintEnd_toStartOf="@+id/botonMultiplicar"
            app:layout_constraintBaseline_toBaselineOf="@+id/boton2" android:onClick="tres"/>
    <Button
            android:text="*"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/botonMultiplicar"
            app:layout_constraintStart_toEndOf="@+id/boton3" app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintBaseline_toBaselineOf="@+id/boton3"
            android:onClick="multiplicar"/>
    <Button
            android:text="0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/boton0" android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/boton1" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.5" app:layout_constraintEnd_toStartOf="@+id/botonPunto"
            android:onClick="cero"/>
    <Button
            android:text="Result"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/botonPunto"
            app:layout_constraintStart_toEndOf="@+id/boton0" app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintEnd_toStartOf="@+id/botonIgual"
            app:layout_constraintBaseline_toBaselineOf="@+id/boton0" android:onClick="resultado"/>
    <Button
            android:text="Borrar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/botonIgual"
            app:layout_constraintStart_toEndOf="@+id/botonPunto" app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintEnd_toStartOf="@+id/botonDividir"
            app:layout_constraintBaseline_toBaselineOf="@+id/botonPunto" android:onClick="borrar"/>
    <Button
            android:text="/"
            android:layout_width="wrap_content"
            android:layout_height="49dp"
            android:id="@+id/botonDividir"
            app:layout_constraintStart_toEndOf="@+id/botonIgual" app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintBaseline_toBaselineOf="@+id/botonIgual"
            android:onClick="dividir"/>
</android.support.constraint.ConstraintLayout>